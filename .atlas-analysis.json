  "keyFeatures": [
    "Framework-agnostic authentication framework for TypeScript",
    "Comprehensive plugin ecosystem with 28+ built-in plugins",
    "OAuth2/OIDC support with 35+ social providers (GitHub, Google, Apple, etc.)",
    "Type-safe APIs for both server and client",
    "Multiple database adapters: Prisma, Drizzle, MongoDB, Kysely",
    "Client SDKs for React, Vue, Svelte, Solid, and vanilla JS",
    "Framework integrations: Next.js, SvelteKit, Solid Start, TanStack Start",
    "Multi-factor authentication (2FA, TOTP, Email OTP)",
    "Passkey/WebAuthn support via @better-auth/passkey",
    "Magic link and email OTP authentication",
    "Organization and multi-tenant capabilities",
    "Multi-session management",
    "Anonymous authentication",
    "Username-based authentication",
    "Phone number authentication",
    "JWT and bearer token support",
    "Access control and admin features",
    "Device authorization flow",
    "SIWE (Sign-In with Ethereum) support",
    "SSO and SCIM protocols via separate packages",
    "Stripe integration for payment-related auth",
    "HaveIBeenPwned integration for password security",
    "CAPTCHA support",
    "Built-in CLI for migrations and setup"
  ],
  "publicApiSurface": [
    "betterAuth() - Main server initialization",
    "createAuthClient() - Client initialization",
    "betterAuth/react - React hooks and components",
    "betterAuth/vue - Vue composables",
    "betterAuth/svelte - Svelte stores",
    "betterAuth/solid - Solid.js primitives",
    "betterAuth/plugins/* - 29+ plugins",
    "betterAuth/adapters/* - Database adapters",
    "betterAuth/social-providers - Social OAuth providers",
    "better-auth CLI - Command-line tool",
    "Auth hooks: onRequest, onResponse, onError, onSuccess",
    "Session APIs: getSession, setSession, deleteSession",
    "User APIs: createUser, updateUser, deleteUser, linkAccount",
    "Plugin API: createAuthPlugin, createAuthEndpoint, createAuthMiddleware"
  ]
